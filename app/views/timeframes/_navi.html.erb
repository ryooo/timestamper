<div class="page-controls loading-hidden">
  <div class="left-controls">
    <div class="scope-type-menu">
      <% {organization: :組織, location: :拠点, user: :あなた}.each do |k, v| %>
        <a class="<%= @current.scope == k ? 'active' : '' %>" data-controller="links" data-action="links#click" href="/shifts/?scope=<%= k %>"><%= v %></a>
      <% end %>
    </div>
  </div>

  <div class="center-controls">
    <div class="page-title">シフト</div>
    <div class="date-range-picker btn-group" data-controller="date-range-picker">
      <a data-action="date-range-picker#previous links#click" data-controller="links" class="btn btn-default" href="javascript:void(0);"><i class="fas fa-angle-left"></i></a>
      <a class="picker btn btn-default" data-target="date-range-picker.picker" data-controller="links" data-action="links#click" href="javascript:void(0);"><i class="fas fa-calendar-alt"></i><span data-target="date-range-picker.pickerText"></span></a>
      <div class="dropdown">
        <a data-toggle="dropdown" data-target="#" data-controller="links" data-action="links#click" class="btn btn-default" href="javascript:void(0);"><%= @current.term == :week ? '週単位' : '月単位' %></a>
        <div class="dropdown-menu">
          <div class="dropdown-menu-inner">
            <a data-controller="links" data-action="links#click" href="/shifts/?term=week">週単位</a>
            <a data-controller="links" data-action="links#click" href="/shifts/?term=month">月単位</a>
          </div>
        </div>
      </div>
      <a data-action="date-range-picker#next links#click" data-controller="links" class="btn btn-default" href="javascript:void(0);"><i class="fas fa-angle-right"></i></a>
    </div>
  </div>

  <div class="right-controls">
    <div class="dropdown">
      <a data-toggle="dropdown" data-target="#" data-controller="links" data-action="links#click" class="btn btn-default" href="javascript:void(0);"><i class="fas fa-cog"></i><span class="tablet-hidden">Tools</span></a>
      <div class="dropdown-menu">
        <div class="dropdown-menu-inner">
          <div class="divider"></div>
          <a data-controller="links" data-action="links#click" data-links-remote-modal="method" data-remote="true" href="/shifts.csv?end_date=2020-09-30&amp;start_date=2020-09-01">Export CSV</a>
          <a data-controller="links" data-action="links#click" href="/shifts/?print_preview=true">Print Preview</a>
        </div>
      </div>
    </div>
    
    <div class="dropdown">
      <a data-toggle="dropdown" data-target="#" data-controller="links" data-action="links#click" class="btn btn-green" href="javascript:void(0);"><i class="fas fa-plus"></i><span class="tablet-hidden">New</span></a>
      <div class="dropdown-menu dropdown-menu-right">
        <div class="dropdown-menu-inner">
          <a data-controller="links" data-action="links#click" data-links-remote-modal="true" data-remote="true" href="/bulk/shift/new"><i class="fas fa-calendar-day"></i>Shift</a>
          <a data-controller="links" data-action="links#click" data-links-remote-modal="true" data-remote="true" href="/time_offs/new"><i class="fas fa-tree-palm"></i>Time Off Request</a>
          <a data-controller="links" data-action="links#click" data-links-remote-modal="true" data-remote="true" href="/availabilities/new"><i class="fas fa-thumbs-down"></i>Availability</a>
          <a data-controller="links" data-action="links#click" data-links-remote-modal="true" data-remote="true" href="/swaps/new"><i class="fas fa-bullhorn"></i>Shift Cover Request</a>
          <a data-controller="links" data-action="links#click" data-links-remote-modal="true" data-remote="true" href="/events/new"><i class="fas fa-star"></i>Event</a>
        </div>
      </div>
    </div>
  </div>
</div>
