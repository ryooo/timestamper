
<%= form_with(
  url: session_path(resource),
  scope: :user,
  id: "main-form",
  class: "basic-wrap large",
  data: {
    controller: "forms",
    action: "forms#submit ajax:error->forms#ajaxError ajax:success->forms#ajaxSuccess"
  }) do |f| %>

  <div class="basic-header">
    <h3 class="title">ログイン</h3>
    <p class="start">アカウントをお持ちでない方は<%= link_to "登録", new_registration_path(resource_name) %>をお願いします。</p>
  </div>
  <hr>

  <div class="form-group">
    <%= f.label :organization_code, :"組織コード" %>
    <%= f.text_field :organization_code,
      autocomplete: "shifter-organization_code",
      class: "form-control",
      placeholder: "例) abcdef12",
      autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.label :email, :"メールアドレス" %>
    <%= f.text_field :email,
      autocomplete: "email",
      class: "form-control",
      placeholder: "例) ○○@gmail.com" %>
  </div>

  <div class="form-group">
    <%= f.label :password, :"パスワード" %>
    <%= f.password_field :password,
      autocomplete: "new-password",
      class: "form-control",
      placeholder: "6文字以上の英数字",
      style: "background-image: url('data:image/png;base64,'); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: auto;" %>
  </div>

  <button type="submit" data-action="forms#submit" data-target="forms.submitButton" class="btn btn-blue btn-lg btn-block">ログイン</button>
  <p class="start mt-2">パスワードを忘れた方は<%= link_to "こちら", new_user_password_path %>からリセットできます。</p>
<% end %>
